{
    "extends": [
        "eslint:recommended",
        "plugin:import/errors",
        "plugin:react/recommended",
        "plugin:jsx-a11y/recommended", 
        "prettier",
        "prettier/react"
    ],
    "rules": {
        "react/props-type": 0,
        "no-console": 1,
        "react-hooks/rules-of-hooks": 2,
        "react-hooks/exhustive-dept": 1
    },
    "plugins": ["react", "import", "jsx-a11y", "react-hooks"],
    "parseOptions": {
     "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmafeatures": {
        "jsx": true
    }
  },
  "env": {
      "es6": true,
      "browaer": true,
      "node": true
  },
  "settings": {
      "react": {
          "version": "detect"
      }
  }
}